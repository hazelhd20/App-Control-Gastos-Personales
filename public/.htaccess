RewriteEngine On

# Auto-detect base path
RewriteBase /

# Redirect to index.php if file doesn't exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Security
Options -Indexes

# Block access to config and sensitive files
<FilesMatch "\.(sql|json|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>
